program konversi_suhu;
{
Programmer : Muhammad Dzulfiqar Firdaus
Deklarasi : Membuat kalkulator perhitungan untuk mengkonversi suhu celcius ke kelvin, reamur dan fahrenheit.
}
var
kelvin,reamur,fahrenheit: real;
celcius:integer;

begin
writeln('Masukkan Nilai Celcius = ');readln(celcius);
kelvin:=celcius+273;
reamur:=4/5*celcius;
fahrenheit:=9/5*celcius+32;
writeln('Hasil konversi dari ',celcius,' Celcius adalah = ');
writeln('Kelvin = ',kelvin:10:2);
writeln('Reamur = ',reamur:10:2);
writeln('Fahrenheit = ',fahrenheit:10:2);
readln;
end.
